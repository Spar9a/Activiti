            <Button Content="Button" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="100"/>
            <Button Content="Button" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="100"/>
            <Button Content="Button" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="100"/>
            <Button Content="Button" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="100"/>
            <Button Content="Button" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="100"/>
        </StackPanel>
        <StackPanel x:Name="ContentBlock" Margin="10,105,10,0"/>
    </Grid>
</Window>
